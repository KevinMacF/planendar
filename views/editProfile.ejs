<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Edit Profile</strong>
        </div>
        <form action="/editProfile" method="POST">
          <fieldset>
            <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                <br>
                <img class="center-block" src=<%=photo %> width="150"></img>
                <br>
                <br>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-picture"></i>
                      </span>
                      <input class="form-control" name="photo" id="photo" type="text" placeholder="Enter picture link (optional)" autofocus>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                      </span>
                      <input class="form-control" name="name" id="name" type="text" placeholder="Enter new name (optional)" autofocus>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                      </span>
                      <input class="form-control"  name="email" id="email" type="email" placeholder="Enter new email (optional)">
                    </div>
                  </div>
                  <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Color Scheme<span class="caret"></span></button><br>
                    <ul class="dropdown-menu">
                      <li>Blue (default)</li>
                      <li>Lightgreen</li>
                      <li>Yellow</li>
                      <li>Red</li>
                    </ul>
                  </div>
                  <br>
                  <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Edit Profile Info">
                  </div>
                </div>
              </div>
          </fieldset>
        </form>
        <form action="/" method="GET">
          <button class="btn btn-primary btn-block">Back to Home</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>