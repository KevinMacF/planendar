<div class="container" style="margin-top:40px">
<style>
  .back-to-home {
    background-color: <%=color %>;
  }
  .edit-profile {
    background-color: <%=color %>;
  }
  .edit-profile:hover {
    background-color: grey;
  }
  .back-to-home:hover {
    background-color: grey;
  }
  .green {
    color: #00a80b;
  }
  .red {
    color: #ed1212;

  }
  .orange {
    color: #ffae00;
  }
  .default {
    color: #4286f4;
  }
</style>
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Edit Profile</strong>
        </div>
        <form action="/editProfile" method="POST">
          <fieldset>
            <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                <br>
                <img class="center-block" src=<%=photo %> width="150"></img>
                <br>
                <br>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-picture"></i>
                      </span>
                      <input class="form-control" name="photo" id="photo" type="text" placeholder="Enter picture link (optional)" autofocus>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                      </span>
                      <input class="form-control" name="name" id="name" type="text" placeholder=<%=name %> autofocus>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                      </span>
                      <input class="form-control"  name="email" id="email" type="email" placeholder=<%=email %> >
                    </div>
                  </div>
                  <center>
                    <select class="slctbox" name="scheme">
                      <option value="current" id="current" name="current" selected>Select Color Scheme</option>
                      <option class="default" value="default" id="default" name="default" >Blue (Default)</option>
                      <option class="green" value="#00a80b" id="#00a80b" name="#00a80b" >Green</option>
                      <option class="red" value="#ed1212" id="#ed1212" name="#ed1212" >Red</option>
                      <option class="orange" value="#ffae00" id="#ffae00" name="#ffae00">Orange</option>
                    </select>
                  </center>
                  <br>
                  <br>
                  <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block edit-profile" value="Edit Profile Info">
                  </div>
                </div>
              </div>
          </fieldset>
        </form>
        <form action="/" method="GET">
          <button class="btn btn-primary btn-block back-to-home">Back to Home</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>